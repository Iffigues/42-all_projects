#   Initialisation de la VM

#   Update and install package essential
apt-get update
apt-get upgrade
apt-get build-dep build-essential

#   Install packages
apt-get install net-tools
apt-get install iptables-persistent
apt-get install sudo
apt-get install git

#   Add theme
apt-get install zsh
sh -c "$(wget https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O -)"
cd ~/.oh-my-zsh/themes && wget https://raw.githubusercontent.com/channprj/dotfiles-macOS/master/custom-zsh-theme/dpoggi-timestamp.zsh-theme && cd
